    "lint": "eslint src/**/*.ts",
    "dev": "webpack serve --config test/webpack.config.js",
    "build:test": "webpack --config test/webpack.config.js"
  },
  "peerDependencies": {
    "@formio/js": "^5.0.0",
    "tailwindcss": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "copyfiles": "^2.4.1",
    "ejs": "^3.1.9",
    "@types/ejs": "^3.1.5",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.5.3",
    "ts-loader": "^9.5.1"
  }
} 