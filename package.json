{
  "name": "formio-tailwind",
  "version": "1.0.0",
  "description": "Tailwind CSS templates for Form.io",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "copyfiles -u 1 \"src/**/*.ejs\" lib",
